{
  "name": "dev-store",
  "displayName": "Dev Store",
  "description": "Your personal command store for VS Code. Organize and quickly access frequently used commands per repository.",
  "publisher": "SiddharthSangavi",
  "version": "0.0.1",
  "icon": "resources/logo.png",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other",
    "Snippets",
    "Programming Languages"
  ],
  "keywords": [
    "commands",
    "terminal",
    "repository",
    "snippets",
    "productivity"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "viewsContainers": {
      "activitybar": [
        {
          "id": "dev-store",
          "title": "Dev Store",
          "icon": "resources/store.svg"
        }
      ]
    },
    "views": {
      "dev-store": [
        {
          "id": "devStoreExplorer",
          "name": "Command Store",
          "type": "tree"
        }
      ]
    },
    "commands": [
      {
        "command": "dev-store.addSection",
        "title": "Add Section",
        "icon": "$(add)"
      },
      {
        "command": "dev-store.addCommand",
        "title": "Add Command",
        "icon": "$(plus)"
      },
      {
        "command": "dev-store.editItem",
        "title": "Edit",
        "icon": "$(edit)"
      },
      {
        "command": "dev-store.deleteItem",
        "title": "Delete",
        "icon": "$(trash)"
      },
      {
        "command": "dev-store.copyCommand",
        "title": "Copy Command",
        "icon": "$(copy)"
      },
      {
        "command": "dev-store.runInTerminal",
        "title": "Run in Terminal",
        "icon": "$(terminal)"
      },
      {
        "command": "dev-store.exportData",
        "title": "Dev Store: Export Commands",
        "icon": "$(cloud-upload)"
      },
      {
        "command": "dev-store.importData",
        "title": "Dev Store: Import Commands",
        "icon": "$(cloud-download)"
      },
      {
        "command": "dev-store.insertInTerminal",
        "title": "Insert into Terminal",
        "icon": "$(arrow-right)"
      }
    ],
    "menus": {
      "view/title": [
        {
          "command": "dev-store.addSection",
          "when": "view == devStoreExplorer",
          "group": "navigation"
        },
        {
          "command": "dev-store.exportData",
          "when": "view == devStoreExplorer",
          "group": "overflow@1"
        },
        {
          "command": "dev-store.importData",
          "when": "view == devStoreExplorer",
          "group": "overflow@2"
        }
      ],
      "view/item/context": [
        {
          "command": "dev-store.addCommand",
          "when": "view == devStoreExplorer && viewItem == section",
          "group": "inline@1"
        },
        {
          "command": "dev-store.editItem",
          "when": "view == devStoreExplorer",
          "group": "inline@2"
        },
        {
          "command": "dev-store.deleteItem",
          "when": "view == devStoreExplorer",
          "group": "inline@3"
        },
        {
          "command": "dev-store.copyCommand",
          "when": "view == devStoreExplorer && viewItem == command",
          "group": "inline@1"
        },
        {
          "command": "dev-store.runInTerminal",
          "when": "view == devStoreExplorer && viewItem == command",
          "group": "inline@2"
        },
        {
          "command": "dev-store.insertInTerminal",
          "when": "view == devStoreExplorer && viewItem == command",
          "group": "inline@3"
        }
      ]
    },
    "css": [
      {
        "path": "./media/styles.css"
      }
    ],
    "keybindings": [
      {
        "command": "dev-store.addSection",
        "key": "ctrl+shift+s",
        "mac": "cmd+shift+s",
        "when": "view == devStoreExplorer"
      },
      {
        "command": "dev-store.addCommand",
        "key": "ctrl+shift+c",
        "mac": "cmd+shift+c",
        "when": "view == devStoreExplorer && viewItem == section"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "npm run check-types && npm run lint && node esbuild.js",
    "watch": "npm-run-all -p watch:*",
    "watch:esbuild": "node esbuild.js --watch",
    "watch:tsc": "tsc --noEmit --watch --project tsconfig.json",
    "package": "npm run check-types && npm run lint && node esbuild.js --production",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests",
    "check-types": "tsc --noEmit",
    "lint": "eslint src",
    "test": "vscode-test",
    "test-compile": "tsc -p ./"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.80.0",
    "@typescript-eslint/eslint-plugin": "^8.25.0",
    "@typescript-eslint/parser": "^8.25.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "npm-run-all": "^4.1.5",
    "typescript": "^5.7.3"
  },
  "dependencies": {
    "uuid": "^11.1.0"
  }
}
